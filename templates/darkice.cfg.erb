# this section describes general aspects of the live streaming session
[general]
duration      = 0                # duration of encoding, in seconds. 0 means forever
bufferSecs    = 5                # size of internal slip buffer, in seconds
reconnect     = yes              # reconnect to the server(s) if disconnected

# this section describes the audio input that will be streamed
[input]
device        = <%= node['darkice-rpi']['input']['device'] %> # Alsa soundcard device for the audio input
sampleRate    = <%= node['darkice-rpi']['input']['sample-rate'] %> # sample rate in Hz. try 11025, 22050 or 44100
bitsPerSample = <%= node['darkice-rpi']['input']['bits-per-sample'] %> # bits per sample. try 16
channel       = <%= node['darkice-rpi']['input']['channels'] %> # channels. 1 = mono, 2 = stereo

# this section describes a streaming connection to an IceCast2 server
# there may be up to 8 of these sections, named [icecast2-0] ... [icecast2-7]
# these can be mixed with [icecast-x] and [shoutcast-x] sections
[icecast2-0]
bitrateMode   = <%= node['darkice-rpi']['stream']['bitrate-mode'] %> # variable bit rate
bitrade       = <%= node['darkice-rpi']['stream']['bitrate'] %> # 320 kbit/s
format        = <%= node['darkice-rpi']['stream']['format'] %> # format of the stream: mp3
quality       = <%= node['darkice-rpi']['stream']['quality'] %> # quality of the stream sent to the server
server        = <%= node['darkice-rpi']['server']['hostname'] %> # host name of the server
port          = <%= node['darkice-rpi']['server']['port'] %> # port of the IceCast2 server, usually 8000
password      = <%= node['darkice-rpi']['server']['password'] %> # source password to the IceCast2 server
mountPoint    = <%= node['darkice-rpi']['stream']['mount'] %> # mount point of this stream on the IceCast2 server
name          = <%= node['darkice-rpi']['stream']['name'] %> # name of the stream
description   = <%= node['darkice-rpi']['stream']['description'] %> # description of the stream
url           = <%= node['darkice-rpi']['stream']['url'] %> # URL related to the stream
genre         = <%= node['darkice-rpi']['stream']['genre'] %> # genre of the stream
public        = <%= node['darkice-rpi']['stream']['public'] %> # advertise this stream?
localDumpFile = <%= node['darkice-rpi']['stream']['dump-file'] %> # Record also to a file
chanel        = 2
